{
	"compilerOptions": {
		"target": "ESNext", // Target modern ES features (like async/await, new imports)
		"module": "CommonJS", // Use CommonJS modules for Electron's main process
		"esModuleInterop": true, // Allow compatibility between CommonJS and ES modules
		"skipLibCheck": true, // Skip type checking of node_modules for faster builds
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node", // Resolve modules like Node.js does
		"baseUrl": ".", // Base directory for resolving paths
		"outDir": "dist", // Output directory for compiled files
		"rootDir": "src", // Root directory for source files,
		"strict": false,
		// "strictNullChecks": true,
		"types": [
			"node"
		],
	},
	"include": [
		"src/**/*.ts", // Only include the Electron main process code
		// "../shared/src/**/*" // Files in shared/src (which need to be compiled)
	],
	"exclude": [
		"node_modules" // Exclude dependencies from type checking
	]
}